{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      /* ---------- UserService (Auth) ---------- */
      "auth_sign_in": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/auth/sign-in",
          "Methods": [ "POST" ]
        }
      },
      "auth_sign_up": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/auth/sign-up",
          "Methods": [ "POST" ]
        }
      },

      /* ---------- TaskService ---------- */
      "task_create": {
        "ClusterId": "taskCluster",
        "Match": {
          "Path": "/task",
          "Methods": [ "POST" ]
        }
      },
      "task_create_with_comment": {
        "ClusterId": "taskCluster",
        "Match": {
          "Path": "/task-with-comment",
          "Methods": [ "POST" ]
        }
      },
      "task_update": {
        "ClusterId": "taskCluster",
        "Match": {
          "Path": "/task/{id:guid}",
          "Methods": [ "PATCH" ]
        }
      },
      "task_get_all_by_user": {
        "ClusterId": "taskCluster",
        "Match": {
          "Path": "/tasks/{userId:guid}",
          "Methods": [ "GET" ]
        }
      },
      "task_get_by_id": {
        "ClusterId": "taskCluster",
        "Match": {
          "Path": "/task/{id:guid}",
          "Methods": [ "GET" ]
        }
      },
      "task_delete": {
        "ClusterId": "taskCluster",
        "Match": {
          "Path": "/task/{id:guid}",
          "Methods": [ "DELETE" ]
        }
      }
    },

    "Clusters": {
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "https://localhost:7293/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "taskCluster": {
        "Destinations": {
          "taskService": {
            "Address": "https://localhost:7256/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  }
}
